<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartWeightliftingGame"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="흥겹다 역도"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartAvoidGame" />

    <ImageView
        android:id="@+id/imgGameLogo"
        android:layout_width="529dp"
        android:layout_height="133dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mainimage" />

    <Button
        android:id="@+id/btnStartAvoidGame"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="장애물 피하기"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGameLogo" />

    <Button
        android:id="@+id/btnShowRecord"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="기록보기"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/btnStartWeightliftingGame"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btnStartWeightliftingGame"
        app:layout_constraintTop_toBottomOf="@+id/btnStartWeightliftingGame" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="종료하기"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="로그인"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/btnLogout"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="로그아웃"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.874"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"/>


</androidx.constraintlayout.widget.ConstraintLayout>