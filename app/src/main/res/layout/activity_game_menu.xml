<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnStartBombGame"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/button_drawable"
        android:text="폭탄 돌리기"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartWeightliftingGame"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnStartWeightliftingGame"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="흥겹다 역도"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnStartAvoidGame" />

    <ImageView
        android:id="@+id/imgGameLogo"
        android:layout_width="529dp"
        android:layout_height="133dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/noiselogo" />

    <Button
        android:id="@+id/btnStartAvoidGame"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="장애물 피하기"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgGameLogo" />

    <Button
        android:id="@+id/btnShowRecord"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="기록보기"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintEnd_toEndOf="@+id/btnFinish"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnFinish"
        app:layout_constraintTop_toBottomOf="@+id/imgGameLogo" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="108dp"
        android:layout_height="39dp"
        android:layout_marginEnd="112dp"
        android:layout_marginRight="112dp"
        android:background="@drawable/button_drawable"
        android:bottomLeftRadius="12dp"
        android:bottomRightRadius="12dp"
        android:text="종료하기"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"
        android:topLeftRadius="12dp"
        android:topRightRadius="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/btnStartBombGame"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnShowRecord"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>